@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="pt-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="card col-md-6  m-1">
        <form id="profile-form" method="post" class="card-body ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Name" class="form-control" disabled />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Email" class="form-control" disabled />
                <label asp-for="Input.Email" class="form-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.StreetAddress" class="form-control" disabled />
                <label asp-for="Input.StreetAddress" class="form-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.City" class="form-control" disabled />
                <label asp-for="Input.City" class="form-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.State" class="form-control" disabled />
                <label asp-for="Input.State" class="form-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-primary mt-2">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
