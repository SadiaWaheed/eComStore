@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Types</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary rounded-5">
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <td width="90%">Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="90%">@obj.Name</td>
                <td>
                    <div class=" btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-dark rounded-3 mx-2">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-dark rounded-3 mx-2">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
