@model eComStore.Model.ViewModels.ShoppingCartViewModel

<form method="post">
    <div class="container row">

        <div class="col-8">
            <div class="row p-4">
                <h2 class="text-primary">Cart</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    @foreach (var item in Model.ListCart)
                    {
                        <div class="card rounded-3 m-2">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-2 col-lg-2">
                                        <img src="@item.Product.ImageUrl" onerror="this.error=null; this.src='\\images\\products\\no-image-found.jpg';" class="card-img rounded" />
                                    </div>
                                    <div class="col-7 col-lg-7">
                                        <div class="row">
                                            <span class="card-title h5 text-primary"><b>@item.Product.Title</b></span>
                                        </div>
                                        <div class="row">
                                            <span class="card-title text-info"><b>@item.Product.Author</b></span>
                                        </div>
                                        <div class="row">
                                            <span></span>
                                        </div>
                                    </div>
                                    <div class="col-2 col-lg-2">
                                        <div class="row">
                                            <p>
                                                <span class="currency">SAR</span>
                                                <span class="price"><b>@((item.Product.Price * item.Count).ToString("0.00"))</b></span>
                                            </p>
                                        </div>
                                        <div class="row">
                                            <p>
                                                <span class="list-price"><strike>@item.Product.ListPrice.ToString("0.00")</strike></span>
                                                <span class="discount">@item.Product.ListPrice.ToString("00")%</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-2 col-lg-2">
                                    </div>
                                    <div class="col-3 col-lg-3">
                                        <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-outline-dark rounded-3 ">
                                            <i class="bi bi-trash-fill"></i> Remove
                                        </a>                                       
                                    </div>
                                    <div class="col-4 col-lg-4">
                                    </div>
                                    <div class="col-3 col-lg-3">
                                        <div class="row">
                                            <div class="col-4 col-lg-4">
                                                <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-dark rounded-3">
                                                    <i class="fa fa-plus"></i>
                                                </a>
                                            </div>
                                            <div class="col-2 col-lg-2">
                                                <p class="text-center"><span class="h2"><strong>@item.Count</strong></span></p>
                                            </div>
                                            <div class="col-4 col-lg-4">
                                                <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-dark rounded-3">
                                                    <i class="fa fa-minus"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="card">
                <div class="row p-4">
                    <h3 class="text-primary">Order Summary</h3>
                </div>
                <div class="row">

                </div>
            </div>
        </div>
    </div>
</form>
