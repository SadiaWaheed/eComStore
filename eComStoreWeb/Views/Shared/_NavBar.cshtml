@using Microsoft.AspNetCore.Http
@using eComStore.Utility
@inject IHttpContextAccessor HttpContextAccessor

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">E-ComStore</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="User" asp-controller="Home" asp-action="Index">Home  <span class="visually-hidden">(current)</span></a>
                </li>
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Content Management</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Genre" asp-action="Index">Genre</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="CoverType" asp-action="Index">Cover Type</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class=nav-link asp-area="Admin" asp-controller="Order" asp-action="Index">
                            Manage Order
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class=nav-link asp-area="User" asp-controller="Cart" asp-action="Index">
                        @await Component.InvokeAsync("ShoppingCart")
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="WishList">
                        <i class="fa-regular fa-heart fa-l"></i>
                    </a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
